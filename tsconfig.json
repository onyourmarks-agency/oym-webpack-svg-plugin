{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"checkJs": true,
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"esnext"
		],
		"module": "commonjs",
		"noImplicitAny": false,
		"outDir": "./dist",
		"target": "esnext",
		"typeRoots": [
			"./node_modules/@types",
			"./src/@types"
		],
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"verbatimModuleSyntax": false,
		"ignoreDeprecations": "5.0",
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules",
	],
}
